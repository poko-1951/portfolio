<div class="container">
  <div class="row">
    <div class="col-4 text-center">
      <%= image_tag @user.get_profile_image, class:"profile_image shadow" %>
    </div>
    <div class="col-8">
      <div class="row mt-4">
        <div class="d-flex align-items-center">
          <h1><%= @user.name %></h1>
          <% if @user.is_deleted == false %>
            <div class="text-success fw-bold ms-3">アカウント有効</div>
          <% else %>
            <div class="text-danger fw-bold ms-3">アカウント無効</div>
          <% end %>
          <%= render "public/users/modal", user: @user, url: admin_user_path(@user)%>
        </div>
      </div>
      <div class="row mt-2"><h6>作成日時：<%= @user.created_at.strftime('%Y/%m/%d %H:%M') %></h6></div>
      <div class="row mt-2"><h6>更新日時：<%= @user.updated_at.strftime('%Y/%m/%d %H:%M') %></h6></div>
      <div class="row">
        <% @topics.each do |topic| %>
          <div class="user_topic">
            <div class="col-4">
              <%= image_tag @user.get_profile_image, class:"topic_profile_image" %>
            </div>
            <div class="col-8">
              <!--中身を入れられるようにする-->
            </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

