<div class="container">
  <div class="row">
    <div class="col-4 text-center">
      <%= image_tag @user.get_profile_image, class:"profile_image shadow" %>
    </div>
    <div class="col-8">
      <div class="row mt-4">
        <div class="d-flex align-items-center">
          <h1><%= @user.name %></h1>
          <button type="button" class="btn btn-success rounded-pill ms-4" data-bs-toggle="modal" data-bs-target="#edit_user_profile">
            編集する
          </button>
        </div>
      </div>
      <div class="row mt-2"><h6>作成日時：<%= @user.created_at.strftime('%Y/%m/%d %H:%M') %></h6></div>
      <div class="row mt-2"><h6>更新日時：<%= @user.updated_at.strftime('%Y/%m/%d %H:%M') %></h6></div>
      <div class="row">
        <% @topics.each do |topic| %>
          <div class="user_topic">
            <div class="col-4">
              <%= image_tag @user.get_profile_image(100,100), class:"profile_image" %>
            </div>
            <div class="col-8">
              <!--中身を入れられるようにする-->
            </div>
            </div>
        <% end %>
      </div>
    </div>

  </div>
</div>

<!--モーダルの中身-->
<div class="modal fade" id="edit_user_profile" tabindex="-1" aria-labelledby="edit_user_profile_Label" aria-hidden="true" >
  <div class="modal-dialog modal-dialog-centered" >
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </button>
      </div>
      <%= form_with model:@user, url: admin_user_path(@user) do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :image, "プロフィール画像" %>
            <%= f.file_field :image, accept: "image/*", class:"form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Close</button>
          <%= f.submit "登録", class:"btn btn-success rounded-pill"%>
        </div>
      <% end %>
    </div>
  </div>
</div>