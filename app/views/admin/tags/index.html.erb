<div class="container">
  <div class="row align-items-center">
    <div class="d-flex justify-content-end">
      <%= link_to "削除モード", destroy_index_admin_tags_path, class:"btn btn-outline-danger rounded-pill" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="d-flex flex-wrap">
      <% @tags.each do |tag| %>
        <div class="btn btn-info rounded-pill me-2 mb-3 topic_tag">
          <%= link_to tag.name, tag_search_admin_topics_path(tag_id: tag.id), class:"text-decoration-none text-dark" %>
          </div>
      <% end %>
    </div>
  </div>
</div>