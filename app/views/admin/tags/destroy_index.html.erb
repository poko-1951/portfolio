<div class="container">
  <div class="row align-items-center">
    <div class="col-6">
      <h1 class="fw-bold">タグ削除</h1>
    </div>
  </div>
  <div class="row mt-3">
    <div class="d-flex flex-wrap">
      <% @tags.each do |tag| %>
        <div class="btn btn-warning rounded-pill me-2 mb-3">
          <%= link_to tag.name, admin_tag_path(tag), method: :delete, data: {confirm: "削除しますか？"}, class:"text-decoration-none text-dark" %>
          </div>
      <% end %>
    </div>
  </div>
</div>