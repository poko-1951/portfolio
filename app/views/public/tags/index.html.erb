<div class="container">
  <div class="row mt-5">
    <div class="d-flex flex-wrap">
      <% @tags.each do |tag| %>
        <div class="me-4 mb-3 topic_tag">
          <%= link_to tag.name, tag_search_topics_path(tag_id: tag.id), class:"tag-design shadow-sm text-light" %>
          </div>
      <% end %>
    </div>
  </div>
</div>