<!--モーダルボタン-->
<button type="button" class="btn btn-outline-success rounded-pill" data-bs-toggle="modal" data-bs-target="#edit_acquaintance">
   <i class="fa-solid fa-pen-to-square"></i>
</button>

<!--モーダルの中身-->
<div class="modal fade" id="edit_acquaintance" tabindex="-1" aria-labelledby="edit_acquaintance_Label" aria-hidden="true" >
  <div class="modal-dialog modal-lg modal-dialog-centered" >
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">お知り合い情報編集</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </button>
      </div>
      <%= form_with model: @acquaintance, url: acquaintance_path(@acquaintance) do |f| %>
        <div class="modal-body text-start">
          <div class="form-group mb-2">
            <%= f.label :name, "お名前" %>
            <%= f.text_field :name, class:"form-control", required: true %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :relationship, "関係性" %>
            <%= f.text_field :relationship, class:"form-control", required: true %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :character, "性格" %>
            <%= f.text_field :character, class:"form-control", required: true %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :like, "好きなこと" %>
            <%= f.text_field :like, class:"form-control", required: true %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">閉じる</button>
          <%= f.submit "更新", class:"btn btn-outline-success rounded-pill"%>
        </div>
      <% end %>
    </div>
  </div>
</div>