<!--モーダルボタン-->
<button type="button" class="btn btn-outline-success rounded-pill" data-bs-toggle="modal" data-bs-target="#new_acquaintance">
   <i class="fa-solid fa-person-circle-plus h3 m-0"></i> 登録
</button>

<!--モーダルの中身-->
<div class="modal fade" id="new_acquaintance" tabindex="-1" aria-labelledby="new_acquaintance_Label" aria-hidden="true" >
  <div class="modal-dialog modal-lg modal-dialog-centered" >
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">お知り合い情報登録</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </button>
      </div>
      <%= form_with model: Acquaintance.new, url: acquaintances_path do |f| %>
        <div class="modal-body text-start">
          <div class="form-group mb-2">
            <%= f.label :name, "お名前" %>
            <%= f.text_field :name, class:"form-control", required: true %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :relationship, "関係性" %>
            <%= f.text_field :relationship, class:"form-control", required: true %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :character, "性格" %>
            <%= f.text_field :character, class:"form-control", required: true %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :like, "好きなこと" %>
            <%= f.text_field :like, class:"form-control", required: true %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">閉じる</button>
          <%= f.submit "登録", class:"btn btn-outline-success rounded-pill"%>
        </div>
      <% end %>
    </div>
  </div>
</div>