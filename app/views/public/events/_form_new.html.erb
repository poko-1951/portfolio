<div class="row">
  <%= form_with(model: @event, url: events_path, remote: true) do |f| %>
    <div class="form-group">
      <%= f.label :title, "予定"%>
      <%= f.text_field :title, class:'form-control mb-3', required: true %>
    </div>
    <div class="form-group">
     <%= f.label :start,"開始時刻" %>
     <%= f.datetime_select :start, {default: Date.today + 0.hours + 00.minutes, minute_step: 30}, class: 'form-control date_form' %>
    </div>
    <div class="form-group mb-2">
     <%= f.label :end,"終了時刻" %>
     <%= f.datetime_select :end, {default: Date.today + 0.hours + 00.minutes, minute_step: 30}, class: 'form-control date_form' %>
    </div>
    <div class="form-group mb-2">
     <%= f.label :content,"内容" %>
     <%= f.text_field :content, class: 'form-control' %>
    </div>
    <div class="form-group mb-2">
     <%= f.label :place,"場所" %>
     <%= f.text_field :place, class: 'form-control' %>
    </div>
    <div class="form-group mb-2">
     <%= f.label :acquaintance_id, "お相手" %>
     <%= f.select :acquaintance_id, options_from_collection_for_select(current_user.acquaintances, :id, :name), multiple: true %>
    </div>
    <div class="form-group text-end">
      <%= f.submit "登録", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
