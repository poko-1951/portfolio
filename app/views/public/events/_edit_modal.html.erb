<!--モーダルボタン-->
<button type="button" class="btn btn-outline-success rounded-pill" data-bs-toggle="modal" data-bs-target="#edit_event_<%= @event.id %>">
  編集
</button>

<!--モーダルの中身-->
<div class="modal fade" id="edit_event_<%= @event.id %>" tabindex="-1" aria-labelledby="edit_event_Label" aria-hidden="true" >
  <div class="modal-dialog modal-dialog-centered" >
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">イベント編集</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </button>
      </div>
      <%= form_with model: @event, url: event_path(@event) do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :title, "予定"%>
            <%= f.text_field :title, class:'form-control mb-3', required: true %>
          </div>
          <div class="form-group">
            <%= f.label :start,"開始時刻" %>
            <%= f.datetime_select :start, {default: Date.today + 0.hours + 00.minutes, minute_step: 30, use_month_numbers: true}, class: 'form-control date_form' %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :end,"終了時刻" %>
            <%= f.datetime_select :end, {default: Date.today + 0.hours + 00.minutes, minute_step: 30,  use_month_numbers: true}, class: 'form-control date_form' %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :content,"内容" %>
            <%= f.text_field :content, class: 'form-control' %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :place,"場所" %>
            <%= f.text_field :place, class: 'form-control' %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :acquaintance_id, "お相手" %> <br>
            <%= f.collection_check_boxes :acquaintance_ids, current_user.acquaintances, :id, :name %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">Close</button>
          <%= f.submit "更新", class: "btn btn-outline-success rounded-pill" %>
        </div>
      <% end %>
    </div>
  </div>
</div>