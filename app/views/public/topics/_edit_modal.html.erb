<!--モーダルボタン-->
<button type="button" class="btn btn-outline-success rounded-pill" data-bs-toggle="modal" data-bs-target="#edit_topic_<%= topic.id %>">
  編集
</button>

<!--モーダルの中身-->
<div class="modal fade" id="edit_topic_<%= topic.id %>" tabindex="-1" aria-labelledby="edit_topic_Label" aria-hidden="true" >
  <div class="modal-dialog modal-lg modal-dialog-centered" >
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">トピック編集</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </button>
      </div>
      <%= form_with model: topic, url: url do |f| %>
        <div class="modal-body text-start">
          <div class="form-group mb-2">
            <%= f.label :title, "タイトル" %>
            <%= f.text_area :title, class:"form-control", required: true %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :content, "内容" %>
            <%= f.text_area :content, class:"form-control", rows:"10", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :name, "タグ(半角スペースで複数個登録できます)" %>
            <%= f.text_field :name, value: topic.tags.pluck(:name).join(" "), class:"form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">閉じる</button>
          <%= f.submit "登録", class:"btn btn-outline-success rounded-pill"%>
        </div>
      <% end %>
    </div>
  </div>
</div>