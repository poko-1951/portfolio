    <% @topics.each do |topic| %>
      <div class="container topic shadow py-3 my-2">
        <div class="row">
          <div class="col-2">
            <%= link_to image_tag(topic.user.get_profile_image, class:"topic_profile_image"), user_path(topic.user) %>
          </div>
          <div class="col-10">
            <div class="row d-flex align-items-center">
              <div class="col-3 h2"><%= link_to topic.user.name, user_path(topic.user), class:"text-decoration-none text-dark" %></div>
              <div class="col-5">最終更新：<%= topic.updated_at.strftime('%Y/%m/%d %H:%M') %></div>
              <% if topic.user == current_user %>
                <div class="col-2"><%= link_to "編集", edit_topic_path(topic), class:"btn btn-success rounded-pill" %></div>
                <div class="col-2"><%= link_to "削除", topic_path(topic), method: :delete, data: {confirm: "削除しますか？"}, class:"btn btn-danger rounded-pill" %></div>
              <% end %>
            </div>
            <!--タグ一覧-->
            <div class="row ms-2">
              <% topic.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </div>
          </div>
        </div>
        <!--投稿のタイトルと内容-->
        <a class="mt-3 ms-4 text-decoration-none text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample_<%= topic.id %>" aria-expanded="false" aria-controls="collapseExample">
          <div class="h3 fw-bold"><%= topic.title %></div>
          <div class="h6">内容を見る▼</div>
        </a>
        <div class="collapse mt-3 ms-4" id="collapseExample_<%= topic.id %>">
          <div><%= topic.content %></div>
          <div class="text-end"><%= link_to "コメントを見る", topic_path(topic) %></div>
        </div>
      </div>
    <% end %>