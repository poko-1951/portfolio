<div class="container">
  <div class="row">
    <h2 class="text-center fw-bold">ログイン <i class="fa-solid fa-person-walking-arrow-right"></i><i class="fa-solid fa-door-open"></i></h2>
    <div class="col-lg-4 offset-lg-4 col-ms-8 offset-sm-2 col-12 mt-2">
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="form-group align-self-center">
          <%= f.label :email, class:"fw-bold mb-1" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :password, class:"fw-bold mb-1" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control mb-3", required: true %>
        </div>
        <div class="actions text-center">
          <%= f.submit "ログイン", class:"btn btn-success rounded shadow" %>
        </div>
      <% end %>
    </div>
  </div>
</div>