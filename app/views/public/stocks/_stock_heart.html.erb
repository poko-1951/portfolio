<% if topic.stocked_by?(current_user) %>
  <%= link_to topic_stocks_path(topic), method: :delete, remote: true, class:"text-decoration-none h1 text-danger" do %>
    ♥
  <% end %>
<% else %>
  <%= link_to topic_stocks_path(topic), method: :post, remote: true, class:"text-decoration-none h1 text-secondary" do %>
    ♡
  <% end %>
<% end %>